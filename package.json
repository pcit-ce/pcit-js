{
  "name": "@pcit/pcit-js",
  "version": "18.12.0-beta.7",
  "description": "PCIT JS SDK",
  "main": "./lib/index.js",
  "types": "./src/pcit.d.ts",
  "keywords": [
    "pcit",
    "pcit-ce"
  ],
  "dependencies": {
    "node-fetch": "^2.3.0"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.10",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-prettier": "^3.0.0",
    "mocha": "^5.2.0",
    "prettier": "^1.15.2",
    "ts-loader": "^5.3.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.6",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2"
  },
  "scripts": {
    "test": "mocha -r ts-node/register ./test/**/*.ts",
    "prettier": "npx prettier --write ./**/*.ts ./*.md",
    "eslint": "npx eslint --fix ./**/*.ts",
    "prepare": "npx rimraf lib dist",
    "prepublishOnly": "npm run webpack-pro && npx tsc",
    "dev-build": "tsc --outDir ../pcit/frontend/node_modules/@pcit/pcit-js/lib",
    "dev-miniprogram": "tsc --outDir ../pcit/miniprogram/node_modules/@pcit/pcit-js/lib",
    "prewebpack-pro": "npm run prepare",
    "prewebpack-dev": "npm run prepare",
    "webpack-pro": "npx webpack-cli --mode=production",
    "webpack-dev": "npx webpack-cli --mode=development"
  },
  "directories": {
    "lib": "./lib"
  },
  "files": [
    "lib",
    "src",
    ".pcit.yml",
    "dist"
  ],
