{
  "name": "@pcit/pcit-js",
  "version": "18.12.0-beta.8",
  "description": "PCIT JS SDK",
  "main": "./lib/index.js",
  "types": "./types/index.d.ts",
  "keywords": [
    "pcit",
    "pcit-ce"
  ],
  "dependencies": {
    "node-fetch": "^2.3.0",
    "wx-fetch": "github:khs1994/wx-fetch"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.15",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.10.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-prettier": "^3.0.0",
    "mocha": "^5.2.0",
    "prettier": "^1.15.3",
    "ts-loader": "^5.3.1",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.2"
  },
  "scripts": {
    "cleanup": "npx rimraf lib dist types",
    "pretest": "npm run cleanup ; npx tsc",
    "test": "mocha -r ts-node/register ./test/**/*.ts",
    "prettier": "npx prettier --write ./**/*.ts ./*.md",
    "eslint": "npx eslint --fix ./**/*.ts",
    "prepublishOnly": "npm run webpack-pro && npx tsc",
    "dev-build": "tsc --outDir ../pcit/frontend/node_modules/@pcit/pcit-js/lib",
    "dev-miniprogram": "tsc --outDir ../pcit/miniprogram/client/node_modules/@pcit/pcit-js/lib",
    "prewebpack-pro": "npm run cleanup",
    "prewebpack-dev": "npm run cleanup",
    "webpack-pro": "npx webpack-cli --mode=production",
    "webpack-dev": "npx webpack-cli --mode=development"
  },
  "directories": {
    "lib": "./lib"
  },
  "files": [
    "lib",
    "src",
    ".pcit.yml",
    "dist",
    "types"
  ],
  "author": {
    "name": "khs1994",
    "email": "khs1994@khs1994.com",
    "url": "https://khs1994.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pcit-ce/pcit-js"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0"
  },
  "private": false,
  "homepage": "https://github.com/pcit-ce/pcit-js",
  "bugs": {
    "url": "https://github.com/pcit-ce/pcit-js/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
